@{
    ViewBag.Title = "Index";
}
<script src="../../Scripts/jquery-1.4.4.js" type="text/javascript"></script>

<script type="text/javascript" language="javascript">
    // Preparando a função.
    $(document).ready(function () {
        //Quando o btnCadastrar for clicado.
        $("#btnCadastrar").click(function () {
            $.ajax({
                type: "POST",
                url: "/Cadastro/Cadastrar",
                data: $("#frmCadastro").serialize(),
                sucess: function (data) {
                    $("#resultado").html(Data);
                }
            });
        });
    });
</script>

<h2>Index</h2>

<form action="#" method="post" id="frmCadastro" name="frmCadastro">
<label for="nome">Nome</label>
<input type="text" id="nome" name="nome" value="" /><br />
<label for="email">E-Mail</label>
<input type="text" id="email" name="email" value="" /><br />
<input type="button" id="btnCadastrar" name="btnCadastrar" value="Enviar Dados" /><br />
<div id="resultado">
</div>
</form>